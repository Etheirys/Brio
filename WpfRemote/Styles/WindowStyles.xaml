<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="ChromedWindowStyle"
		TargetType="{x:Type Window}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Window}">
					<Grid>
						<Grid>

							<Grid.RowDefinitions>
								<RowDefinition Height="27" />
								<RowDefinition />
							</Grid.RowDefinitions>

							<Rectangle
								x:Name="TitleBarArea"
								Grid.Row="0"
								Fill="Transparent" />
							<Rectangle
								x:Name="BackgroundArea"
								Grid.Row="1"
								Fill="{DynamicResource BackgroundLightBrush}" />
						</Grid>

						<ContentPresenter Content="{TemplateBinding Content}" />

					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>